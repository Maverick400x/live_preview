<!DOCTYPE html>
<html lang="en">
<head>
    <title>Your Orders - Online Bookstore</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-book-half me-2"></i>Online Bookstore
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav align-items-center">
                    <% if (user) { %>
                        <!-- User Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle btn btn-outline-light btn-sm text-warning fw-bold" href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                ðŸ‘‹ Hello, <%= user.username %> â–¼
                            </a>

                            <div class="dropdown-menu dropdown-menu-end p-3 account-dropdown" aria-labelledby="accountDropdown">
                                <div class="row">
                                    <div class="col-md-6">
                                        <!-- User Icon and Name -->
                                        <div class="d-flex align-items-center mb-3">
                                            <i class="bi bi-person-circle fs-2 text-primary me-2"></i>
                                            <div>
                                                <p class="mb-0 fw-bold"><%= user.username %></p>
                                                <small class="text-muted">Logged in</small>
                                            </div>
                                        </div>

                                        <h6 class="fw-bold">Your Account</h6>
                                        <a class="dropdown-item" href="/">
                                            <i class="bi bi-house-door-fill me-2"></i> Home
                                        </a>                  
                                        <a class="dropdown-item" href="/users/account">
                                            <i class="bi bi-person-circle me-2"></i> Your Account
                                        </a>
                                        <a class="dropdown-item dropdown-ca" href="/cart">
                                            <i class="bi bi-bag-check me-2"></i> Your Cart
                                        </a>                  
                                        <a class="dropdown-item" href="/orders">
                                            <i class="bi bi-bag-check me-2"></i> Your Orders
                                        </a>
                                        <a class="dropdown-item text-danger" href="/users/logout">
                                            <i class="bi bi-box-arrow-right me-2"></i> Logout
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </li>
                    <% } else { %>
                        <li class="nav-item me-2">
                            <a class="btn btn-outline-light btn-sm fw-bold" href="/users/login">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Login
                            </a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
    
    <!-- Orders Section -->
    <div class="container mt-5">
        <h2 class="text-center">Your Orders</h2>
        <% if (orders.length > 0) { %>
            <% orders.forEach(order => { %>
                <div class="card mb-3 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Order ID: <%= order.id %></h5>
                        <p><strong>Shipping Address:</strong> <%= order.address %></p>
                        <p><strong>Contact Number:</strong> <%= order.phone %></p>

                        <!-- Responsive Order List -->
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Book</th>
                                        <th>Price (â‚¹)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% order.items.forEach(item => { %>
                                        <tr>
                                            <td><strong><%= item.title %></strong></td>
                                            <td>â‚¹<%= item.price %></td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>

                        <p class="mt-3"><strong>Subtotal: â‚¹<%= order.subtotal %></strong></p>
                        <p><strong>GST (18%): â‚¹<%= order.gst %></strong></p>
                        <p><strong>Shipping: â‚¹<%= order.shipping %></strong></p>
                        <h4><strong>Grand Total: â‚¹<%= order.grandTotal %></strong></h4>
                        <p style="color: red;"><strong>Amount Paid via UPI</strong></p>
                        <p><strong>Expected Delivery Date:</strong> <%= order.deliveryDate %></p>
                        <p><strong>Delivery Partner:</strong> <%= order.deliveryPartner %></p>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p class="text-center">You have no orders yet.</p>
        <% } %>
    </div>

